@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<link href="~/css/site.css" rel="stylesheet" />

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <h4 class="lead">Enter your email.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="list-unstyled">
                    <div asp-validation-summary="All" class="text-danger fs-6"></div>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control rounded" placeholder="Enter your email address" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary rounded my-3">Submit</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
