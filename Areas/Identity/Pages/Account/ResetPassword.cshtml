@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<link href="~/css/site.css" rel="stylesheet" />

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <h4>Reset your password.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="list-unstyled fs-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <input asp-for="Input.Code" type="hidden" />
                <input asp-for="Input.Email" type="hidden" />
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control rounded" placeholder="New password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded mt-2" placeholder="Confirm password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary rounded my-3">Reset</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
